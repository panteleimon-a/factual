# Docker Compose Override Example
# Copy this file to docker-compose.override.yml for local development
# This file will be automatically loaded by docker-compose

version: '3.8'

services:
  backend:
    # Use development settings
    environment:
      - DJANGO_SETTINGS_MODULE=factualweb.settings.dev
      - DJANGO_DEBUG=True
    # Mount code for hot reload
    volumes:
      - ./backend:/app
    # Expose debugger port
    ports:
      - "8000:8000"
      - "5678:5678"  # Python debugger
    command: python manage.py runserver 0.0.0.0:8000

  frontend:
    # Development build with hot reload
    build:
      context: ./frontend
      target: build  # Use build stage only
    volumes:
      - ./frontend:/app
      - /app/node_modules
    command: npm start
    ports:
      - "3000:3000"
    environment:
      - CHOKIDAR_USEPOLLING=true  # For file watching in Docker

  # Optional: Add pgAdmin for database management
  pgadmin:
    image: dpage/pgadmin4:latest
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@factual.local
      PGADMIN_DEFAULT_PASSWORD: admin
    ports:
      - "5050:80"
    depends_on:
      - db
    networks:
      - factual-network
